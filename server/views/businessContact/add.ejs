<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<% 
    isloginUser = false
    if(typeof displayName == 'string' && displayName) 
        isloginUser = true

        isloginUser = true
%>



<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1 class="hd3"><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField" class="tx4">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact Name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField" class="tx4">Number</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Number"
                    name="number" required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField" class="tx4">Email</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the Email"
                    name="email" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="../businessContacts" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



